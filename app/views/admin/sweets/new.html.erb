<div class="container">
	<div class="row">
			<h1>商品新規登録</h1>

			<%= form_for [:admin,@sweet] do |f| %>
				<% if @sweet.errors.any? %>
					<div id="error_explanation">
				      <p><%= @sweet.errors.count %>件のエラーが発生しました。</p>
				      <ul>
					      <% @sweet.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
				      </ul>
				    </div>
				<% end %>
				<div class="col-xs-3">
					<h3>商品画像</h3>
						<%= f.attachment_field :image %>
				</div>
				<div class="col-xs-9">
					<h3>商品名</h3>
						<%= f.text_field :name %>
					<h3>商品説明</h3>
						<%= f.text_area :detail %>
					<h3>ジャンル</h3>
						<!-- デフォルトを'選択して下さい'に設定 -->
						<%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => "選択して下さい" %>
					<h3>税抜価格</h3>
						<%= f.text_field :tax_free_price %>
					<h3>販売ステータス</h3>
						<!-- デフォルトを'選択して下さい'に設定 -->
					<%= f.select :sale_status, Sweet.sale_statuses.keys, include_blank: "選択して下さい" %>
					<%= f.submit '新規登録', class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>




