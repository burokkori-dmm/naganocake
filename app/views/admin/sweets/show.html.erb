
<div class="container">
	<div class="row">
		<h1>商品詳細</h1>
		<div class="col-xs-3">
			<%= attachment_image_tag @sweet, :image, :fill, 200, 200, format: 'jpeg' %>
		</div>
		<div class="col-xs-8">
			<table class="table">
					<tr>
						<th>商品名</th>
						<td><%= @sweet.name %></td>
					</tr>
					<tr>
						<th>商品紹介</th>
						<td><%= @sweet.detail %></td>
					</tr>
					<tr>
						<th>ジャンル</th>
						<td><%= @sweet.genre.name %></td>
					</tr>
					<tr>
						<th>税込価格(税抜価格)</th>
						<td>
						<%= (@sweet.tax_free_price * 1.1).to_i %>
						(<%= @sweet.tax_free_price %>)円</td>
					<tr>
						<th>販売ステータス</th>
						<td><%= @sweet.sale_status %></td>
					</tr>
			</table>

			<%= link_to "編集する",  edit_admin_sweet_path(@sweet.id), class: "btn btn-primary" %>
			<%= link_to "削除する",  admin_sweet_path(@sweet.id), method: :delete, data: {confirm: "本当に削除しますか?"}, class: "btn btn-danger" %>
		</div>
	</div>
</div>