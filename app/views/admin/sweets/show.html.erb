
<div class="container">
	<div class="row">
		<h1>商品詳細</h1>
		<div class="col-xs-2">
			<%= attachment_image_tag @sweet, :image, :fill, 100, 100, format: 'jpeg' %>
		</div>
		<div class="col-xs-10">
			<table class="">
					<tr>
						<th>商品名</th>
						<td><%= @sweet.name %></td>
					</tr>
					<tr>
						<th>商品紹介</th>
						<td><%= @sweet.detail %></td>
					</tr>
					<tr>
						<th>ジャンル</th>
						<td><%= @sweet.genre.name %></td>
					</tr>
					<tr>
						<th>価格</th>
						<td>税込価格(税抜価格)
						<%= (@sweet.tax_free_price * 1.1).to_i %>
						(<%= @sweet.tax_free_price %>)円</td>
					<tr>
						<th>販売ステータス</th>
						<td><%= @sweet.sale_status %></td>
					</tr>
			</table>

			<%= link_to "編集する",  edit_admin_sweet_path(@sweet.id), class: "btn btn-primary" %>
		</div>
	</div>
</div>