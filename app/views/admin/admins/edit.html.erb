
<h2><%= @user.last_name %><%= @user.first_name %>の会員情報編集</h2>

			    <h5 class="table-title">会員ID
			        <%= @user.id %>
			    </h5>

			<%= form_for [:admin, @user], url:admin_admin_path(@user) do |f| %>

	            <h5 class="table-title">氏名
				    <%= f.text_field :last_name %> <%= f.text_field :first_name %>
			    </h5>

				<h5 class="table-title">フリガナ
				    <%= f.text_field :sub_last_name %> <%= f.text_field :sub_first_name %>
			    </h5>

				<h5 class="table-title">郵便番号
	                <%= f.text_field :postal_code %>
	            </h5>

				<h5 class="table-title">住所
	                <%= f.text_field :address %>
	            </h5>

				<h5 class="table-title">電話番号
				    <%= f.text_field :phone_number%>
			    </h5>

			    <h5 class="table-title">メールアドレス
				    <%= f.text_field :email %>
			    </h5>
	     
				<h5 class="table-title">会員ステータス
					<%= f.radio_button :flag, true %>
					<%= f.label :flag, '退会', value: true %>
					<%= f.radio_button :flag, false %>
					<%= f.label :flag, '有効', value: false %>
				</h5>
		
	        <%= f.submit "編集を保存する", class: "btn btn-success" %>

	        <%= link_to "戻る", admin_admin_path, class: "btn btn-primary" %>
	        <% end %>
	    
