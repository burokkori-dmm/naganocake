<h4>注文詳細画面</h4>

	<table class="table table-bordered">
		<tr>
			<th>購入者</th>
			<td><%= link_to  admins_user_path(@order.id) do %>
					<%= order.name %>
					<% end %>
			</td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= @order.ship_postal_code %>
					<%= @order.address %>
					<br>
					<%= @order.name %>
			</td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<th>注文ステータス</th>
			<td>
				<%= f.select :order_status, Order.deposit_statuses.keys.map{ |k| k } %><%= f.submit '更新する', class:"btn btn-success" %>
			</td>
		</tr>
	</table>


	<table class="table table-bordered">
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>制作ステータス</th>
		</tr>


<%= f.fields_for :order_details do |i| %>
		<tr>
			<td><%= i.object.product.name %></td>
			<td><%= addTax(i.object.product.price) %>円</td>
			<td><%= i.object.quantity %></td>
			<td><%= totalPrice(addTax(i.object.product.price),i.object.quantity) %>円</td>
			<td>
				<%= select :making_status, OrederDetail.making_statuses.keys.to_a, include_blank: true %><%= f.submit "更新" %>
			</td>
		</tr>
<% end %>
	</table>


	<table class="table table-bordered">
		<tr>
			<th style="width:30%;">商品合計</th>
			<td><%= addTax(@items.sum(:price)) %>円</td>
		</tr>
		<tr>
			<th style="width:30%;">配送料</th>
			<td><%= @order.postage %>円</td>
		</tr>
		<tr>
			<th style="width:30%;">請求金額合計</th>
			<td><%= addTax(@items.sum(:price)) + @order.postage %>円</td>
		</tr>
	</table>
	<hr>
<% end %>
</div>