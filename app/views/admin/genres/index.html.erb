<h1>ジャンル一覧・追加</h1>
			<%= form_for [:admin,@genre] do |f| %>
				<%= f.label :ジャンル %>
				<%= f.text_field :name %>
				<!-- true falseで合ってる？そもそも:true :falseの場所は何を表している？-->
				<%= f.radio_button :genre_status, :true %>
				<%= f.label :genre_status, :"有効" %>
				<%= f.radio_button :genre_status, :false %>
				<%= f.label :genre_status, :"無効" %>
				<%= f.submit '追加' %>
			<% end %>
		<table class="">
			<thead>
				<th>ジャンル</th>
				<th>状態</th>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td><%= genre.genre_status %></td>
						<td><%= link_to "編集",edit_admin_genre_path(genre.id)%>
					</tr>
				<% end %>
			</tbody>
		</table>