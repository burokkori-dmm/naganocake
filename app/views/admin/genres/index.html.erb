<div class="container">
	<h1>ジャンル一覧・追加</h1>
				<%= form_for [:admin,@genre] do |f| %>
					<%= f.label :ジャンル %>
					<%= f.text_field :name %>
					<!-- true falseで合ってる？そもそも:true :falseの場所は何を表している？以前は有効がtrue,無効がfalseだった-->
					<%= f.radio_button :genre_status, :有効 %>
					<%= f.label :genre_status, :"有効" %>
					<%= f.radio_button :genre_status, :無効 %>
					<%= f.label :genre_status, :"無効" %>
					<%= f.submit '追加', class: "btn btn-primary"%>
				<% end %>
			<table class="table table-striped">
				<thead>
					<th>ジャンル</th>
					<th>状態</th>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= genre.genre_status %></td>
							<td><%= link_to "編集",edit_admin_genre_path(genre.id), class: "btn btn-primary"%></td>
						</tr>
					<% end %>
				</tbody>
			</table>
</div>