<div class="container">
<div class="row">
<h4>注文履歴一覧画面</h4>

  <table class="table">
  	<tr>
  		<th class="order-show">購入日時</th>
  		<th class="order-show">購入者</th>
  		<th class="order-show">注文個数</th>
  		<th class="order-show">ステータス</th>
  	</tr>

    <% @orders.each do |order| %>
  	<tr>
  	  <td><%= link_to order[:created_at].strftime("%Y-%m-%d %H:%M"), admin_order_path(order) %></td>
  		<td><%= order.user.last_name %><%= order.user.first_name %></td>
  		<td><%= order.oreder_details.sum(:peace) %></td>
  		<td><%= order.order_status %></td>
  	 </tr>
    <% end %>
  </table>
</div>
</div>