<div class="container">
	<div class="row">
		<div class="col-md-2">
			<%= render 'public/sweets/template1', genres: @genres %>
		</div>
		<div class="col-md-6">
			<h3>商品一覧</h3>
			 <p>全<%= @sweets.count %>件</p>
			 <p><%= paginate @sweets2 %></p>
				<% @sweets2.each do |sweet| %>
					<% if sweet.genre.genre_status == "有効" and sweet.sale_status == "販売中" %>
						<div class="col-xs-3">
							<%= attachment_image_tag sweet, :image, format: 'jpeg', size: "120x120" %>
								<p><%= link_to sweet.name, public_sweet_path(sweet.id) %></p>
								<p>¥<%= sweet.tax_free_price %></p>
						</div>
					<% end %>
				<% end %>
		</div>
	</div>
</div>