

<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<%= render 'public/sweets/template1', genres: @genres %>
		</div>
		<div class="col-xs-10">
			<h3><%= @sweet.name %></h3>
			<h3><%= @sweet.detail %></h3>
			<!-- 税込価格に計算して表示させてる -->
			<% price = @sweet.tax_free_price * 1.1 %>
			<h3>￥<%= (price).to_i %>円(税込)</h3>
			<select name="peace">
			  <option value="0">個数選択</option>
			  <option value="1">1</option>
			  <option value="2">2</option>
			  <option value="3">3</option>
			</select>
			<!-- リンク先はカート内商品のindexアクションにしている -->
			<%= link_to "カートに入れる", public_cart_items_path%>
		</div>
	</div>
</div>



    <%= form_for @cart_item, url: public_cart_items_path do |f| %>
        <%= f.hidden_field :sweet_id, value: @sweet.id %>
        <%= f.select :peace, options_for_select((1..10).to_a), include_blank: "個数選択" %>
        <%= f.submit "カートに入れる" %>
    <% end %>