<div class="container">
	<div class="row">
		<div class="col-md-2">
			<%= render 'public/sweets/template1', genres: @genres %>
		</div>
		<div class="col-md-6">
			<h3><%= @genre.name %>一覧</h3>
			<p>全<%= @genre.sweets.count %>件</p>
			<div class="text-center"><%= paginate @sweets %></div>
				<% @sweets.each do |sweet| %>
					<!-- SweetテーブルにあるgenreidとGenreテーブルの主キーidと同じならば-->
					<% if sweet.genre == @genre and sweet.sale_status == "販売中"%>
						<div class="col-xs-3">
							<%= attachment_image_tag sweet, :image, format: 'jpeg', size: "120x120" %>
								<p><%= link_to sweet.name, public_sweet_path(sweet.id) %></p>
								<p>¥<%= sweet.tax_free_price %></p>
						</div>
					<% end %>
				<% end %>
		</div>
	</div>
</div>
