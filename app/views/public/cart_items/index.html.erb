
<div class = 'contaiter'>
	<div class='row'>
	  <div class='col-xs-3'>
		<h2>ショッピングカート</h2>
		  <span><%= link_to 'カートを空にする', public_cart_items_path, method: :delete, data: {conform: "本当に全部削除してもよろしいですか？"}, class: "btn btn-danger" %>
		  </span>
		</div>

	  <div class='col-xs-6'>
		<table class='table'>
		  <thead>
		    <tr>
			  <th>商品名</th>
			  <th>単価(税込)</th>
			  <th><数量</th>
			  <th><小計</th>
			  <th colspan="3"></th>
			</tr>
		  </thead>
		  <tbody>
			<% @cart_items.each do |cart_item| %>
			<tr>
			  <td><%= attachment_image_tag(cart_item.sweet, :image, :fill, 50, 50, fallback: "no_image-icon.jpg" )%></td>
			  <!--税抜き価格-->
			  <td><%= @cart_items.sweet.price * 1.1 %></td>
			  <!--税抜き価格-->
				  <%link_to '変更' , public_cart_items_path, method: :patch, class: "btn btn-primary"%></td>
			  <td><%= cart_item.sweet%></td>
			  <td><%= link_to'削除', public_cart_items_path, method: :delete,class: "btn btn-danger" %></td>
			   <!--それぞれの商品価格-->
			  <%= cart_item.sweet.tax_free_price %>
			  <%= @total_price += cart_item.sweet.tax_free_price %>
			</tr>
			<% end %>
		  </tbody>
		</table>
	</div>

	  <div class='col-xs-3'>
	  	<ul>
	  		<li><%= link_to '買い物を続ける', public_sweets_path, class: 'btn btn-primary' %></li>
	  		<li>合計金額</li>
	  		<li><%= @total_price * 1.1 %></li>
	  		<li><%= link_to '情報入力に進む', new_public_order_path %></li>
	  		<li></li>
	  		<li></li>
	  	</ul>
	  </div>
	</div>
</div>




