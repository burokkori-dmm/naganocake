
	<%= form_for [:public, delivery] do |f| %>
		<div class="form-group">
			  <%= f.label :郵便番号 %>
		  <span class= "form-space">
			  <%= f.text_field :postal_code, size: "30×10" %>
		</div>
		<div class="form-group">
			  <%= f.label :住所 %>
		  <span class= "form-space2">
			  <%= f.text_field :address, size: "30×10" %>
		</div>
		<div class="form-group">
			  <%= f.label :宛名 %>
		  <span class= "form-space2">
			  <%= f.text_field :name, size: "30×10" %>
		</div>
		<div class="form-button">
			  <%= f.submit '登録する', class:'btn btn-success' %>
		</div>
	<% end %>