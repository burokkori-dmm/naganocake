
<%= form_for [:public, @delivery] do |f| %>
  <div class="field row">
	<%= f.label :郵便番号 %>
	<%= f.text_field :postal_code, size: "30×10" %>
  </div>
  <div class="field row">
	<%= f.label :住所 %>
	<%= f.text_field :address, size: "30×10" %>
  </div>
  <div class="field row">
	<%= f.label :宛名 %>
	<%= f.text_field :name, size: "30×10" %>
  </div>
  <div class="actions row">
	<%= f.submit '編集する' %>
  </div>
<% end %>
