
<div class = "contaier" >
      <h3>配送先編集</h3></br>
      <%= form_for [:public, @delivery] do |f| %>
        <div class="form-group">
      	<%= f.label :郵便番号 %>
      	<%= f.text_field :postal_code, size: "30×10" %>
        </div>
        <div class="form-group">
      	<%= f.label :住所 %>
      	<%= f.text_field :address, size: "30×10" %>
        </div>
        <div class="form-group">
      	<%= f.label :宛名 %>
      	<%= f.text_field :name, size: "30×10" %>
        </div>
        <div class="form-group">
      	<%= f.submit '編集する', class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
