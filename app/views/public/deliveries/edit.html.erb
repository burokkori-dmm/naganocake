

<%= form_for [:public, @delivery] do |form| %>

	<%= form.label :郵便番号 %>
	<%= form.text_field :postal_code, size: "30×10" %>

	<%= form.label :住所 %>
	<%= form.text_field :address, size: "30×10" %>

	<%= form.label :宛名 %>
	<%= form.text_field :name, size: "30×10" %>

	<%= form.submit '編集する' %>

<% end %>