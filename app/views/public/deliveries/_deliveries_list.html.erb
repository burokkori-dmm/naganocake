<table class="table table-bordered">
			  <thead>
			    <tr>
			      <th class="delivery_table1">郵便番号</th>
			      <th class="delivery_table2">住所</th>
			      <th class="delivery_table3">宛名</th>
			      <th class="delivery_table4"></th>
			    </tr>
			  </thead>

			  <tbody>
			  	<% deliveries.each do |delivery| %>
			    <tr>
			    	<td><%= delivery.postal_code %></td>
			        <td><%= delivery.address %></td>
			        <td><%= delivery.name %></td>
			        <td><%= link_to '編集する', edit_public_delivery_path(delivery), class:"btn btn-primary "%>
					    <%= link_to '削除する', public_delivery_path(delivery), method: :delete, data: {confirm: "本当に削除しますか？"},class:"btn btn-danger "%>
				    </td>
			    </tr>
			    <% end %>
			  </tbody>
	</table>