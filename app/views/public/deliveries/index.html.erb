
<div class = "contaier" style= "text-align:center;" >
    <h3>配送先登録/一覧</h3></br>
      <%= form_for [:public, @delivery] do |f| %>
        <div class="form-group">
      	  <%= f.label :郵便番号 %>
      	  <%= f.text_field :postal_code, size: "30×10" %>
        </div>
        <div class="form-group">
      	  <%= f.label :住所 %>
      	  <%= f.text_field :address, size: "30×10" %>
        </div>
        <div class="form-group">
      	  <%= f.label :宛名 %>
      	  <%= f.text_field :name, size: "30×10" %>
        </div>
        <div class="form-group">
      	  <%= f.submit '登録する', class:'btn btn-success' %>
        </div>
    <% end %>


	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">郵便番号</th>
	      <th scope="col">住所</th>
	      <th scope="col">宛名</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<%= @deliveries.each do |delivery| %>
	    <tr>
	    	<td><%= delivery.postal_code %></td>
	        <td><%= delivery.address %></td>
	        <td><%= delivery.name %></td>
	        <td><%= link_to '編集する', edit_public_delivery_path(delivery), class:"btn btn-primary "%>
			    <%= link_to '削除する', public_delivery_path(delivery), method: :delete, data: {confirm: "本当に削除しますか？"},class:"btn btn-danger "%>
		    </td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>








