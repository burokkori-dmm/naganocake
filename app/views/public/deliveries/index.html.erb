
<div class= "contaier">
	<div class= "row">

		<h2>配送先登録/一覧</h2>
			<div class= "col-xs-5">
				<%= form_for [:public, @delivery] do |f| %>

				  <%= f.label :郵便番号ハイフンなし %>
				  <%= f.text_field :postal_code %></br>

				  <%= f.label :住所 %>
				  <%= f.text_field :address, size: "30×10" %></br>

				  <%= f.label :宛名 %>
				  <%= f.text_field :name %>

				  <%= f.submit '登録する'%>
				<% end %>

			<div class= "col-xs-7">
				<table>
					<thead>
						<tr>
							<th>郵便</th>
							<th>住所</th>
							<th>宛名</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<%= @deliveries.each do |delivery| %>
						<tr>
							<td><%= delivery.postal_code %></td>
							<td><%= delivery.address %></td>
							<td><%= delivery.name %></td>
							<td><% link_to '編集する', edit_public_delivery_parh, method: :patch, class:"btn btn-primary "%>
								<% link_to '削除する', public_deliveries_parh, method: :delete, data: {confirm: "本当に削除しますか？"},class:"btn btn-primary "%>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>







