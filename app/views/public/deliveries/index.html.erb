
<div class = "contaier" >
    <h3>配送先登録/一覧</h3></br>
      <%= form_for [:public, @delivery] do |f| %>
        <div class="form-group">
      	  <%= f.label :郵便番号 %>
      	  <%= f.text_field :postal_code, size: "30×10" %>
        </div>
        <div class="form-group">
      	  <%= f.label :住所 %>
      	  <%= f.text_field :address, size: "30×10" %>
        </div>
        <div class="form-group">
      	  <%= f.label :宛名 %>
      	  <%= f.text_field :name, size: "30×10" %>
        </div>
        <div class="form-group">
      	  <%= f.submit '登録する', class:'btn btn-primary' %>
        </div>
    <% end %>

	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">郵便番号</th>
	      <th scope="col">住所</th>
	      <th scope="col">宛名</th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
	      <%= @deliveries.each do |delivery| %>
	        <th scope="row">1</th>
	        <td><%= delivery.address %></td>
	        <td><%= delivery.name %></td>
	        <td><%= link_to '編集する', edit_public_delivery_parh, method: :patch, class:"btn btn-primary "%>
			    <%= link_to '削除する', public_deliveries_parh, method: :delete, data: {confirm: "本当に削除しますか？"},class:"btn btn-primary "%>
		    </td>
		  <% end %>
	    </tr>
	    <tr>
	      <th scope="row">2</th>
	      <td>Jacob</td>
	      <td>Thornton</td>
	      <td>@fat</td>
	    </tr>
	  </tbody>
	</table>
</div>








