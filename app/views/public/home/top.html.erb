<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<%= render 'public/sweets/template1', genres: @genres %>
		</div>
		<div class="col-xs-6">
			<h1>Welcome to NaganoCake</h1>
			　<P>ようこそ、NaganoCakeへ！<br>
				このサイトは、ケーキ販売のECサイトになります。<br>
				会員でない方も商品の閲覧はできますが、<br>
				購入には会員登録が必要になります。</P>

			<h1>おすすめ商品</h1>
						<% @sweets.each do |sweet| %>
							<% if sweet.genre.genre_status == "有効" and sweet.sale_status == "販売中" %>
								<div class="col-xs-4">
									<%= link_to public_sweet_path(sweet.id) do %><%= attachment_image_tag sweet, :image, format: 'jpeg', size: "150x150" %><% end %>
									<p><%= sweet.name %></p>
									<p>¥<%= sweet.tax_free_price %></p>
								</div>
							<% end %>
						<% end %>
				<%= paginate @sweets %>
		</div>
	</div>
</div>