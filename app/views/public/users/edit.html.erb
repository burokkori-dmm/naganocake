<h2>登録情報編集</h2>
<%= form_for [:public, @user] do |f| %>

    <form>
    <h3>名前</h3>
	<%= f.text_field :last_name %> <%= f.text_field :first_name %>

	<h3>フリガナ</h3>
	<%= f.text_field :sub_last_name %> <%= f.text_field :sub_last_name %>

	<h3>メールアドレス</h3>
	<%= f.text_field :email %>

	<h3>郵便番号(ハイフンなし)</h3>
	<%= f.text_field :postal_code %>

	<h3>住所</h3>
	<%= f.text_field :address %>

	<h3>電話番号(ハイフンなし)</h3>
	<%= f.text_field :phone_number%>
<% end %>
<table>
	<tr>
		<td>
		    <%= link_to "編集をする", public_user_path %>
	    	<%= link_to "退会する", public_path(current_user) %>
	    </td>
    </tr>
</table>




