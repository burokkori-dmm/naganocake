<h2>新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tbody>
      <tr>
      　<td>
        <h5>名前</h5>
          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: '姓' %>
          </div>
        </td>
        <td>
        　<div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <h5>フリガナ</h5>
        　<div class="field">
            <%= f.label :sub_last_name %><br />
            <%= f.text_field :sub_last_name, autofocus: true, autocomplete: "セイ" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.label :sub_first_name %><br />
            <%= f.text_field :sub_first_name, autofocus: true, autocomplete: "メイ" %>
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号（ハイフンなし）" %>
  </div>

　<div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号（ハイフンなし）" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード（確認用）" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<%= render "public/users/shared/links" %>