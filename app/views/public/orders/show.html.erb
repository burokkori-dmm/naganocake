<h4>注文履歴詳細</h4>
	<h5>注文情報</h5>
<table class="table table-bordered ">
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td>
				〒<%= @order.postal_code %><br>
				<%= @order.address %><br>
				<%= @order.name %>様
			</td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order.order_status %></td>
		</tr>
</table>

<h5>請求情報</h5>
<table class="table table-bordered ">
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= addTax(@order.order_details.sum(:price)) %>円</td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %>円</td>
		</tr>
		<tr>
			<th>ご請求額</th>
			<td><%= addTax(@order.order_details.sum(:price))+ @order.postage %>円</td>
		</tr>
	</tbody>
</table>

<h5>注文内容</h5>
<table class="table table-bordered">
		<tr>
			<th>内訳</th>
			<td>
			  <% @order.order_details.each do |detail| %>
				<%= detail.sweet_id.name %> (<%= addTax(detail.sweet_id.tax_price) %>円/個) ×<%= detail.peace %>個＝
				<%= addTax(detail.tax_price) %>円<br>
			  <% end %>
			</td>
		</tr>
</table>
