<div class="container">
<div class="row">
<h4>注文履歴詳細</h4>
	<h5>注文情報</h5>
<table class="table table-bordered ">
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td>
				〒<%= @order.postal_code %><br>
				<%= @order.address %><br>
				<%= @order.name %>様
			</td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order.order_status %></td>
		</tr>
</table>

<h5>請求情報</h5>
<table class="table table-bordered ">
	<tbody>
		<tr>
			<th>商品合計</th>
			<td><%= addTax(@order.oreder_details.sum(:tax_price)) %>円</td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %>円</td>
		</tr>
		<tr>
			<th>ご請求額</th>
			<td><%= addTax(@order.oreder_details.sum(:tax_price))+800 %>円</td>
		</tr>
	</tbody>
</table>

<h5>注文内容</h5>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価</th>
			<th>数量</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		 <% @order.oreder_details.each do |detail| %>
		<tr>
				<td><%= detail.sweet.name %></td>
				<td> <%= addTax(detail.tax_price/detail.peace) %>円</td>
				<td><%= detail.peace %>個</td>
				<td><%= addTax(detail.tax_price) %>円</td>
			  <% end %>
		</tr>
	</tbody>
</table>
</div>
</div>