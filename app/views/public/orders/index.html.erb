<h1>注文履歴一覧</h1>
<table  class="table table-bordered ">
		<thead>
			<tr style="background:#dad7d7;">
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払い金額</th>
				<th>注文詳細</th>
			</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
			<td>
				〒<%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.name %> 様
			</td>
			<td>
				<% order.order_details.each do |item| %>
					<%= item.sweet_id.name %><br>
				<% end %>
			</td>
			<td><%= addTax(order.order_details.sum(:price)) %>円</td>
			<td><%= link_to order_path(order), class: "btn btn-success" do %>表示する<% end %></td>
		</tr>
		<% end %>
	</tbody>
</table>
