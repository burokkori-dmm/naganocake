<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li>
                  <%= link_to "マイページ", public_user_path %>
                </li>
                <li>
                  <%= link_to "商品一覧", public_sweets_path %>
                </li>
                <li>
                  <%= link_to "カート", public_cart_items_path %>
                </li>
                <li>
                  <%= link_to "About", public_home_about_path %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
            <% elsif admin_signed_in? %>
                <li>
                  <%= link_to "商品一覧", admin_sweets_path %>
                </li>
                <li>
                  <%= link_to "会員一覧",  admin_admins_path %>
                </li>
                <li>
                  <%= link_to "注文一覧", admin_orders_path %>
                </li>
                <li>
                  <%= link_to "ジャンル一覧", admin_genres_path %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
            <% else %>
                <li>
                  <%= link_to "商品一覧", public_sweets_path %>
                </li>
                <li>
                  <%= link_to "新規会員登録", new_user_registration_path %>
                </li>
                <li>
                  <%= link_to "ログイン", new_user_session_path %>
                </li>
            <% end %>
          </ul>
        </div>
  <%= content_for?(:content) ? yield(:content) : yield %>
  </body>
  <footer>
    <div class="container">
      <div class="row">
      </div>
    </div>
  </footer>
</html>
